<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.govuk-tabs__tab');
    const panels = document.querySelectorAll('.govuk-tabs__panel');
    const listItems = document.querySelectorAll('.govuk-tabs__list-item');

    function activateTab(tabLink) {
      const targetId = tabLink.getAttribute('href').substring(1);

      // Reset all
      listItems.forEach(item => item.classList.remove('govuk-tabs__list-item--selected'));
      panels.forEach(panel => {
        panel.classList.add('govuk-tabs__panel--hidden');
        panel.setAttribute('aria-hidden', 'true');
      });

      // Activate selected
      tabLink.closest('.govuk-tabs__list-item').classList.add('govuk-tabs__list-item--selected');
      const activePanel = document.getElementById(targetId);
      if (activePanel) {
        activePanel.classList.remove('govuk-tabs__panel--hidden');
        activePanel.setAttribute('aria-hidden', 'false');
      }
    }

    // Attach click events
    tabs.forEach(tab => {
      tab.addEventListener('click', function (e) {
        e.preventDefault();
        activateTab(this);
      });
    });

    // Initialize: Activate first tab by default
    if (tabs.length > 0) {
      activateTab(tabs[0]);
    }

    // --- Copy Code Logic ---
    const copyButtons = document.querySelectorAll('.app-copy-button');
    copyButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const code = this.parentElement.querySelector('code').innerText;
        navigator.clipboard.writeText(code).then(() => {
          const originalText = this.innerText;
          this.innerText = 'Copied!';
          setTimeout(() => { this.innerText = originalText; }, 2000);
        });
      });
    });
  });
</script>