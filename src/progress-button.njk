<style>
  /* Basic tab behavior if GOV.UK CSS isn't fully loaded */
  .govuk-tabs__panel--hidden {
    display: none !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.govuk-tabs__tab');
    const panels = document.querySelectorAll('.govuk-tabs__panel');
    const listItems = document.querySelectorAll('.govuk-tabs__list-item');

    tabs.forEach(tab => {
      tab.addEventListener('click', function (e) {
        e.preventDefault();

        const targetId = this.getAttribute('href').substring(1);

        // 1. Reset Tabs
        listItems.forEach(item => item.classList.remove('govuk-tabs__list-item--selected'));
        
        // 2. Reset Panels
        panels.forEach(panel => {
          panel.classList.add('govuk-tabs__panel--hidden');
          panel.setAttribute('aria-hidden', 'true');
        });

        // 3. Activate current tab
        this.closest('.govuk-tabs__list-item').classList.add('govuk-tabs__list-item--selected');

        // 4. Show current panel
        const activePanel = document.getElementById(targetId);
        activePanel.classList.remove('govuk-tabs__panel--hidden');
        activePanel.setAttribute('aria-hidden', 'false');
      });
    });
  });
</script>